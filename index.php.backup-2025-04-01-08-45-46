                    },
                    "offers": {
                        "@type": "Offer",
                        "price": "<?php echo number_format($product['price'], 2); ?>",
                        "priceCurrency": "KES",
                        "availability": "<?php echo $product['stock'] > 0 ? 'https://schema.org/InStock' : 'https://schema.org/OutOfStock'; ?>",
                        "url": "<?php echo htmlspecialchars(isset($_SERVER['HTTPS']) && $_SERVER['HTTPS'] === 'on' ? 'https://' : 'http://') . htmlspecialchars($_SERVER['HTTP_HOST']); ?>/product-detail.php?id=<?php echo $product['id']; ?>"
                    }
                }
            }<?php if($counter < count($featured_products)): ?>,<?php endif; ?>
            <?php $counter++; endforeach; ?>
