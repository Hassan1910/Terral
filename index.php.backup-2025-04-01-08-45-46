        },
        "sameAs": [
            <?php 
            $social_urls = [];
            if (!empty($social_links['facebook'])) {
                $social_urls[] = '"' . htmlspecialchars($social_links['facebook']) . '"';
            }
            if (!empty($social_links['twitter'])) {
